<!DOCTYPE html>
<html lang="en">

<head>
  <title>Gathrr</title>

  <!-- Font Styles -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400&display=swap" rel="stylesheet">

  <!-- Bootstrap CSS -->
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" rel="stylesheet" />

  <!-- App CSS -->
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/landing.css" type="text/css" />
  <link rel="stylesheet" href="/styles/listings.css" type="text/css" />


  <!-- App JS -->
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>

  <!-- Icon Library -->
  <script src="https://kit.fontawesome.com/2abf93986a.js" crossorigin="anonymous"></script>
</head>

<body>
  <%- include('partials/_header.ejs') %>
    <span class="listed-cards-container">
      <h2>Listings</h2>
      <div id="main-container">
        <form id="new-listing-form">
          Create a New Listing<br>
          <label for="card-name" class="form-label">Card Name:</label><br>
          <input type="text" id="card-name" class="form-input" name="card-name"><br>
          <label for="price" class="form-label">Selling Price:</label><br>
          <input type="number" id="price" class="form-input" name="price"><br>
          <!-- <label for="desc" class="form-label">Description:</label><br>
          <input type="text" id="desc" class="form-input" name="desc"><br> -->
          <label for="image" class="form-label">Link to Image URL:</label><br>
          <input type="text" id="image" class="form-input" name="url"><br>
          <input type="submit" value="Create" class="form-submit-button">
        </form>
        <div class="card-tiles-container">
          <% for (let cards of listedCards) { %>
              <div class="card-tile">
                <img src="<%= cards.image_url %>"></img>
                <div class="name-and-price">
                  <h3>
                    <%= cards.name %>
                  </h3>
                  <h3>$<%= cards.price %>
                  </h3>
                </div>
              </div>
          <% } %>
        </div>
      </div>
    </span>
    <footer>
      <%- include('partials/_footer.ejs') %>
    </footer>
</body>

</html>
