<!DOCTYPE html>
<html lang="en">

<head>
  <title>Gathrr</title>

  <!-- Font Styles -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400&display=swap" rel="stylesheet">

  <!-- Bootstrap CSS -->
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" rel="stylesheet" />

  <!-- App CSS -->
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/landing.css" type="text/css" />
  <link rel="stylesheet" href="/styles/conversations.css" type="text/css" />


  <!-- App JS -->
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>

  <!-- Icon Library -->
  <script src="https://kit.fontawesome.com/2abf93986a.js" crossorigin="anonymous"></script>
</head>

<body>
  <%- include('partials/_header.ejs') %>
    <h2>Conversations</h2>
    <div id="conversations-box">
      <div id="all-conversations">
        Conversations<br>
        <% for (let conversation of conversations) { %>
          <a href="#" class="conversation-button">
            <div id="conversation-name">
              <%= conversation.name %>:
                <%= conversation.card_name %><br>
            </div>
          </a>
          <% } %>
      </div>
      <div id="conversation">
        <div id="conversation-textbox"></div>
        <label for="user-textbox" class="textbox-label">Send:</label>
          <input type="text" placeholder="Type Here" id="user-textbox" class="textbox-input" name="user-textbox">
    </div>
</body>
<footer>
  <%- include('partials/_footer.ejs') %>
</footer>
</body>

</html>
